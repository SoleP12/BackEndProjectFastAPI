{
  "name": "FastAPI Backend",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "workspaceFolder": "/workspaces/BackEndProjectFastAPI/backend",
  "postStartCommand": "python -m venv .venv || true && . .venv/bin/activate && pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/workspaces/BackEndProjectFastAPI/backend/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  }
}

